[alias]
	lg = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d %s %C(green)(%C(cyan)%an%C(green), %ar)%Creset' --abbrev-commit --all
	lgp = log --graph --format=fuller --stat -p --color-words --all
[log]
	decorate = false
